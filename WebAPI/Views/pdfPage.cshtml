@model Entities.Dto.PdfDto

<!DOCTYPE html>
<html>
<head>
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

    <style>
        .mainContain{
            
            width:100%;
        }
        .ortala{
            width:30%;
            margin-left: 200px;
        }
        .conteiner{
            width:50%;            
        }
        .imagePlace{
            float:right;
            width:50%;
            margin-top:-400px;
            margin-right:-40px;
        }
        .tableCustomer {
            padding:10px;
            width: 100%;
            border: 0.6px rgba(0, 0, 0, 0.5) solid;
            font-size: 11px;
        }
        .tableCustomer tr td:nth-child(1) {
            text-align: right;
        }
        .tableCustomer tr td {
            padding:2px;
        }
        .tableCustomer td:nth-child(3){
            padding-top:10px;
        }
        .tableContainer{
            margin-bottom: 5px;
        }
        .tableRef{            
            padding: 0;
            margin:20px 0;
            width:265px;
            border: 0.6px solid rgba(0, 0, 0, 0.5);
            border-collapse: collapse;
            color: red;
        }
        .tableRef td {
            font-size: 10px;
            border: 0.6px solid rgba(0, 0, 0, 0.5);
        }
        .baslik{
            color:red;
            margin-left:100px;
        }
        .totals{
            margin-left: 365px;
        }
        .tableProducts td:nth-child(6) {
            text-align: right;
        }
        .tableProducts td:nth-child(7) {
            text-align:right;
        }
        .totalsTable{
           padding:10px;
        }
        .totalsTable td:nth-child(1){
           padding-bottom: 20px;
        }
        .totalsTable td:nth-child(2) {
            padding-left: 50px;
            padding-bottom:20px;
            text-align: right;
        }
        .grandT{
            margin-left: 325px;
            margin-top:60px;
        }
        .grandTotalsTable td:nth-child(1) {
            padding-right: 20px;
        }
        .grandTotalsTable td:nth-child(2) {
            padding-left: 50px;
            text-align: right;
            padding-right:5px;
            border:0.6px solid black;
        }
        .grandTotalsTable{
            border-spacing:20px;
        }
    </style>
</head>
<body>
    <div class="mainContain">
        <div class="conteiner">
            <h2 class="baslik">QUOTAION</h2>
            <div class="tableContainer">
                <table class="tableCustomer bg-info">
                    <tr>
                        <td></td>
                        <td></td>
                        <td>@Model.Customer.CustomerName</td>
                    </tr>
                    <tr>
                        <td><b>TO</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.To</p></td>
                    </tr>
                    <tr>
                        <td><b>ATTN</b></td>
                        <td>: </td>
                        <td><p>@Model.Customer.Attn</p></td>
                    </tr>
                    <tr>
                        <td><b>VESSEL</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.Vessel</p></td>
                    </tr>
                    <tr>
                        <td><b>DELİVERY PORT</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.DeliveryPort</p></td>
                    </tr>
                    <tr>
                        <td><b>REF</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.Ref</p></td>
                    </tr>
                    <tr>
                        <td><b>CUR</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.Cur</p></td>
                    </tr>
                    <tr>
                        <td><b>DISCOUNT (%)</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.Discount</p></td>
                    </tr>
                    <tr>
                        <td><b>PAYMENT TERMS</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.PaymentTerms</p></td>
                    </tr>
                    <tr>
                        <td><b>DELIVERY CHARGES</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.DeliveryCharges</p></td>
                    </tr>
                    <tr>
                        <td><b>BOAT SERVİCE FEE</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.BoatServiceFee</p></td>
                    </tr>
                    <tr>
                        <td><b>FREIGHT COST</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.FreightCost</p></td>
                    </tr>
                    <tr>
                        <td><b>CUSTOMS COST</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.CustomsCost</p></td>
                    </tr>
                    <tr>
                        <td><b>INCOTERMS</b></td>
                        <td><b>: </b> </td>
                        <td><p>@Model.Customer.Incoterms</p></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="imagePlace">
            
            <img src="@Model.Customer.PhotoPath" width="400" height="230" />
        </div>
    </div>
    @{
        int sayac = 0;
    }
    @foreach (var item in Model.Products)
    {
        <div class="ortala">
            <table class="tableRef bg-info">
                    <tr>
                        <td><h5>Req. NO: @item.RefNo</h5></td>
                    </tr>
                    <tr>
                        <td><h5>P.O. NO: @item.PONO</h5></td>
                    </tr>
            </table>
        </div>
        <table class="table tableProducts table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th colspan="2"></th>
                    <th colspan="3">REQUIRED</th>
                    <th></th>
                    <th class="bg-info" colspan="3">ALTERNATİVE PACKAGING</th>
                    <th class="bg-info text-danger">REMARKS</th>
                </tr>
                <tr>
                    <th>NO</th>
                    <th>Code</th>
                    <th>Description</th>
                    <th>Qnty</th>
                    <th>Unit</th>
                    <th>Price</th>
                    <th class="bg-warning bg-opacity-25">Total</th>
                    <th class="bg-info">Qnty</th>
                    <th class="bg-info">Unit</th>
                    <th class="bg-info">Price</th>
                    <th class="bg-info"></th>
                </tr>                 
            </thead>
            <tbody>                
                @foreach (var answers in Model.ProductsAnswers)
                {
                    if (answers[sayac].ProductId==item.ProductId)
                    {
                        foreach (var answer in answers)
                        {
                            <tr>
                                <td>@answer.No</td>
                                <td>@answer.Code</td>
                                <td>@answer.Description</td>
                                <td>@answer.Qnty</td>
                                <td>@answer.Unit</td>
                                <td>@answer.Price</td>
                                <td class="bg-warning bg-opacity-25">@answer.total</td>
                                <td class="bg-info">@answer.AlterNativeQnty</td>
                                <td class="bg-info">@answer.AlterNativeUnit</td>
                                <td class="bg-info">@answer.AlterNativePrice</td>
                                <td class="bg-info text-danger">@answer.Remarks</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <div class="totals">
            <table class="totalsTable">
                <tr>
                    <td><b>SUBTOTAL :</b></td>
                    <td>@item.SubTotal</td>
                </tr>
                <tr>
                    <td><b>TOTAL :</b></td>
                    <td>@item.AllTotal</td>
                </tr>
            </table>
        </div>
    }
    <div class=" grandT">
        <table class="grandTotalsTable">
            <tr>
                <td><b>GRAND TOTAL :</b></td>
                <td class="bg-info">@Model.Customer.GrandTotal</td>
            </tr>
        </table>
    </div>
    
</body>
</html>